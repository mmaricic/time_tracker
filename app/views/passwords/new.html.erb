<div id="clearance" class="password-reset"  style="margin: auto;width: 600px;margin-top: 100px;">
  <h2 class="mb-4 d-flex justify-content-center"><%= t(".title") %></h2>

  <p class="mb-4 d-flex justify-content-center text-center"><%= t(".description") %></p>

  <%= form_for :password, url: passwords_path do |form| %>
    <div class="form-group">
      <%= form.label :email, class: "font-weight-bold" %>
      <%= form.text_field :email, type: 'email', class: "form-control" %>
    </div>

    <div class="submit-field">
      <%= form.submit class: "btn btn-primary btn-lg btn-block" %>
    </div>
  <% end %>
</div>
